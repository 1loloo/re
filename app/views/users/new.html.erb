<% provide(:title, 'Sign up') %>

<div class="user">
    <%= form_for(@user) do |f| %>

      <%= f.label :name,"Имя" %>
      <%= f.text_field :name %>

				<%= f.label :phone,"Телефон" %>
		    <%= f.text_field :phone %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password,"Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить" %>
    <% end %>
</div>

