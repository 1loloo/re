<%= fields_for(@user) do |f| %>
		<div class="non-block">
				<div>
				<%= f.label :name %>
		    <%= f.text_field :name %>
				<div>
				</div>
				<%= f.label :phone, "Phone" %>
		    <%= f.password_field :phone %>
				<div>
				</div>
		    <%= f.label :email %>
		    <%= f.text_field :email %>
				<div>
				</div>
		    <%= f.label :password %>
		    <%= f.password_field :password %>
				<div>
				</div>
		    <%= f.label :password_confirmation, "Confirmation" %>
		    <%= f.password_field :password_confirmation %>
				</div>	
		</div>
<% end %>

